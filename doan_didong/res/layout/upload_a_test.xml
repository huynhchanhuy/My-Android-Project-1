<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung câu hỏi" />

        <EditText
            android:id="@+id/ed_cau_hoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10" />

        <TextView
             
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án A" />

        <EditText
            android:id="@+id/ed_tra_loi_a"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />
        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án B" />

        <EditText
            android:id="@+id/ed_tra_loi_b"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />
        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án C" />

        <EditText
            android:id="@+id/ed_tra_loi_c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />
        <TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án D" />

        <EditText
            android:id="@+id/ed_tra_loi_d"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" />

        

		<TextView
            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án đúng" />
		<RadioGroup
            android:id="@+id/radio_tra_loi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radio_tra_loi_a"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A" />

            <RadioButton
                android:id="@+id/radio_tra_loi_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B" />

            <RadioButton
                android:id="@+id/radio_tra_loi_c"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C" />
            <RadioButton
                android:id="@+id/radio_tra_loi_d"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D" />
        </RadioGroup>

		<Button
		    android:id="@+id/btn_upload_test1"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="Upload" />

    </LinearLayout>
</ScrollView>