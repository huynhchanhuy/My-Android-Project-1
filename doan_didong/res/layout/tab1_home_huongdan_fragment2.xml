<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#F1F2F1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="30dp"
    	android:paddingRight="30dp"
    	
    	android:layout_gravity="center_horizontal"
    	android:gravity="center"
    	android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:textColor="#FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold|italic"
            android:text="Trang 2/5 " />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:text="- Liệt kê các từ thông dụng" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:text="- Phát âm" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:text="- Đánh dấu yêu thích" />
        <com.example.doan_didong.ScalableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/screenshot_6" />
        
        
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:text="- Liệt kê thành ngữ thường gặp, lưu thành yêu thích" />
        

        <com.example.doan_didong.ScalableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/screenshot_7" />
        
        
        
        
    </LinearLayout>
</ScrollView>