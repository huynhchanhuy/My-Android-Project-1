<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout 
        android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:paddingLeft="30dp"
    	android:paddingRight="30dp"
    	android:background="#F1F2F1"
    	android:layout_gravity="center_horizontal"
    	android:gravity="center"
    	android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:textColor="#FF0000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold|italic"
            android:text="Trang 4/5 " />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:text="- Xem video" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:text="- Đánh dấu yêu thích" />
        <com.example.doan_didong.ScalableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/screenshot_41" />
        <com.example.doan_didong.ScalableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:src="@drawable/screenshot_42" />
        
        
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:paddingTop="20dp"
            android:text="- Thi trắc nghiệm theo từng mức độ khác nhau" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:text="- Cho phép chọn mức độ, số câu hỏi" />
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_gravity="left"
            android:paddingLeft="10dp"
            android:text="- Lưu kết quả thi, xem đáp án" />
        

        <com.example.doan_didong.ScalableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:src="@drawable/screenshot_43" />
        <com.example.doan_didong.ScalableImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_marginTop="10dp"
            android:src="@drawable/screenshot_44" />
        
        
        
        
    </LinearLayout>
</ScrollView>