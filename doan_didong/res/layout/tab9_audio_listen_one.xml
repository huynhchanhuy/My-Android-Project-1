        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:background="@layout/tab6_bg_player_header"
        android:paddingLeft="5dp" >

        <!-- Song Title -->

        <TextView
            android:id="@+id/tab9_one_id"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tab9_one_link"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tab9_one_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/tab9_one_btntext"
            android:layout_weight="1"
            android:paddingTop="5dp"
            android:paddingLeft="5dp"
            android:text="The Good, The Bad And The Ugly"
            android:textColor="#00FFCC"
            android:textSize="16dp"
            android:textStyle="bold" />

        <!-- Playlist button -->

        <ImageButton
            android:id="@+id/tab9_one_btntext"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:background="@null"
            android:src="@drawable/btn_playlist" />

        <TextView
            android:id="@+id/tab9_one_ngay_tao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:text="Đăng: 26/08/2013"
            android:textColor="#00FF00"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/tab9_one_luot_view"
